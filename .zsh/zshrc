ZSH_ROOT="${HOME}/.zsh"

PATH="/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin"

autoload -U compinit && compinit

function zshrc-compile () {
  for f in ${ZSH_ROOT}/**/*.zsh; do
    zcompile $f
  done
}

for f in ${ZSH_ROOT}/**/*.zsh; do
  source $f
done

# reload bookmarks
b > /dev/null 2>&1
