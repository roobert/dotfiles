#!/bin/bash

sink=$(pactl list short sinks | grep 'RUNNING' | awk '{ print $1 }')

#if [[ -z "$sink" ]]; then
#  echo "no active audio-sinks" | dzen2 -p 1 &
#  exit
#fi

case $1 in
  up)   pactl set-sink-volume $sink '+2.5%' ;;
  down) pactl set-sink-volume $sink '-2.5%' ;;
  mute) pactl set-sink-mute   $sink toggle ;;
esac

volume=$(pactl list sinks | grep "Sink #$sink" -A9 | grep Volume | awk '{ print $5 }')

#echo "Volume: $volume" | dzen2 -p 1 &
