if test -d ~/opt/notion/bin 2> /dev/null; then
  export PATH="$HOME/opt/notion/bin:$PATH"
fi

if test -d ~/bin 2> /dev/null; then
  export PATH="$HOME/bin:$PATH"
fi

if test -d $HOME/.screenlayout/; then
  bash $HOME/.screenlayout/default.sh
fi

if which feh > /dev/null 2>&1; then
  true #feh --bg-fill /usr/share/backgrounds/warty-final-ubuntu.png
fi

if which autocutsel > /dev/null 2>&1; then
  autocutsel &
  autocutsel -s PRIMARY &
fi

if which vmware-user > /dev/null 2>&1; then
  vmware-user &
fi

if which stalonetray > /dev/null 2>&1; then
  killall stalonetray; stalonetray -i 16 --background '#101010' --icon-gravity W --grow-gravity E --geometry 1-150 &
  killall nm-applet;   nm-applet &
fi

if [[ "$(hostname)" == "mbp0" ]]; then
  synclient MaxTapTime=0
  synclient HorizTwoFingerScroll=1
  synclient PalmDetect=1
fi

#eval $(gnome-keyring-daemon --start) &

# ssh-agent and wm are now exec'd from Xsession.d/ scripts
# requires suckless-tools
#exec ssh-agent herbstluftwm
