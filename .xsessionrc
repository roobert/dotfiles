if test -d ~/opt/notion/bin 2> /dev/null; then
  export PATH="$HOME/opt/notion/bin:$PATH"
fi

if test -d ~/bin 2> /dev/null; then
  export PATH="$HOME/bin:$PATH"
fi

vmware-user &
trayion &
nm-applet &

# remap caps-lock to escape
#xmodmap -e 'clear Lock' -e 'keycode 0x42 = Escape'


# remap £ to #
xmodmap -e 'keycode 12 = 3 numbersign sterling sterling'

# work mac keyboard: 
if [[ `hostname` == "grindelwald" ]]; then
  # remap # to | and ~ to \
  xmodmap -e 'keycode 51 = backslash bar'
  # remap @ to "
  xmodmap -e 'keycode 11 = 2 at'
  # remap " to @ 
  xmodmap -e 'keycode 48 = apostrophe quotedbl'
  # remap key next to '1' key to be same as `~
  xmodmap -e 'keycode 94 = grave asciitilde'
fi

if [[ `hostname` == "e420s" ]]; then
  # make my laptop keyboard more like a mac keyboard
  # remap ¬ (notsign) to ~ 
  xmodmap -e 'keycode 49 = grave asciitilde'
fi

# make xterm disregard spaces at end of line when copying to clipboard
test -f .terminfo/x/xterm-256color || (infocmp xterm-256color | sed -e 's/am, km,/am, bce, km,/' | tic -)

eval $(gnome-keyring-daemon --start) &

exec ssh-agent notion

