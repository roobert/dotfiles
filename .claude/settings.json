{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); echo \"$(echo \"$input\" | jq -r '.model.display_name') | $(echo \"$input\" | jq -r '.workspace.current_dir')\""
  },
  "outputStyle": "explanatory",
  "alwaysThinkingEnabled": false,
  "feedbackSurveyState": {
    "lastShownTime": 1754073096318
  },
  "vimMode": true,
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/set-iterm-claude-session.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/clear-iterm-claude-session.sh"
          }
        ]
      }
    ]
  }
}
